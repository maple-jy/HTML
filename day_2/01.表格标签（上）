    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>

    <!-- table 用来声明一个表格 表格标签 双标签 块级元素-->
    <!-- caption 用来声明一个标题  表格的标题标签  -->
    <!-- tr 用来声明表格的行 表格的行标签 -->
    <!-- th 用来声明表格的列 列标签 表头 特点:加粗,居中 -->
    <!-- td 用来声明表格的列 列标签 普通的单元格 特点：不加粗，也不居中 -->

    <!-- table 支持的属性 -->
    <!-- border  边框 属性值为数字  css border属性-->
    <!-- cellspacing 单元格之间的距离 属性值为数字  css border-spacing属性-->
    <!-- cellpadding 单元格边框与内容之间的距离 属性值为数字 css padding属性-->

    <!-- th，td支持的属性 -->
    <!-- colspan 向右合并单元格 列合并 -->
    <!-- rowspan 向下合并单元格 行合并 -->

    <!-- 创建一个三行四列的表格 -->
    <table border="1" cellspacing="0" cellpadding="20">
        <caption>这是表格的标题</caption>

        <tr>
            <th>序号</th>
            <th>名字</th>
            <th>性别</th>
            <th>年龄</th>
        </tr>
        <tr>
            <td>1</td>
            <td>马云</td>
            <td>男</td>
            <td>40</td>
        </tr>
        <tr>
            <td>2</td>
            <td>董明珠的妹妹</td>
            <td>女</td>
            <td>20</td>
        </tr>


    </table>


</body>

</html>
